{# empty Twig template #}

{% block body %}
<script type="text/javascript">
      $(document).ready(function(){
        
        var myGrid = $('#theGrid');        
        myGrid.jqGrid({ 
          url: 'consultarValoresJSON',
          scrolling: true,
          datatype:'json',
          altRows:true,
          colNames:['Id','Valor Institucional'],
          colModel:[
            { name:'id', index: 'id',sorttype:'int',formatter: 'integer',hidden: true, width:20,editable:false,editoptions:{size:15}, searchtype:"integer", searchrules:{"required":true, "number":true, "maxValue":2000000}  },
            { name:'valor', index: 'valor', width:600,editable:true,editoptions:{size:100},formoptions:{ rowpos:1, label: "Valor", elmprefix:"(*)"},editrules:{required:true} } ],            
          rowNum:10,
          rownumbers: true,
         rowTotal: 10,
         // rowList:[10,20,30],
         // height: 55,
          rownumWidth: 40,
          multiselect: false,
          pager: jQuery('#pager'),
          viewrecords: true, 
          reloadAfterSubmit:true,
          reloadAfterEdit:true,
         //scroll:true,
          loadonce:true, 
           sortname: 'id',
            sortorder: "asc",
            caption: 'Valores Institucionales',
            height: "100%",
            editCaption: "Editar Valores Institucionales",
            addCaption: "Nuevo Valor Institucional",
            editurl: 'manttValoresEdicion'
        });
         myGrid.jqGrid('navGrid','#pager',
        {edit:true,add:true,del:true,view:true},
        {top : 250 ,left: 250, width:800,height:150,jqModal:true,checkOnUpdate:true,savekey: [true,13], navkeys: [true,38,40], checkOnSubmit : true, reloadAfterSubmit:false, closeOnEscape:true,bottominfo:"Campos marcados con (*) son obligatorios"},//edit
        {top : 250 ,left: 250, width:800,height:150,jqModal:true,checkOnUpdate:true,savekey: [true,13], navkeys: [true,38,40], checkOnSubmit : true, reloadAfterSubmit:true, closeOnEscape:true,bottominfo:"Campos marcados con (*) son obligatorios",closeAfterAdd:true},//add
        {width:550,height:100},//del
        {multipleSearch:false, multipleGroup:false}, //search
        {width:550,height:100}//view
        );
        
 
          
      }
 
);
</script>


<table id="theGrid" class="scroll"></table> 
<div id="pager" class="scroll" style="text-align:center;"></div>

{% endblock %}
